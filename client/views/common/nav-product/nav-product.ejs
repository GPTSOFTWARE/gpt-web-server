<div class="nav-product">
    <% for(let i = 0; i < categories.length; i++) { %>
        <% if (index - 1 === i) { %>
            <div class="nav-item btn-active">
                <a href="/product/<%= categories[i].id %>" class="btn-nav-product">
                    <%= categories[i].name %> 
                </a>
            </div>
        <% } else { %>
            <div class="nav-item">
                <a href="/product/<%= categories[i].id %>" class="btn-nav-product">
                    <%= categories[i].name %> 
                </a>
            </div>
        <% } %> 
    <% } %>
</div>